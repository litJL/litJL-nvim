{
  "coc.preferences.formatOnSaveFiletypes": ["css", "markdown", "javascript","typescript", "graphql", "html", "yaml",  "json", "python"],

  // python config
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,

  "snippets.ultisnips.directories":
  [
    "UltiSnips",
    "~/.config/nvim/utils/snips"
  ],

  // explorer
  "explorer.width": 30,
  "explorer.icon.enableNerdfont": true,
  "explorer.previewAction.onHover": false, 
  "explorer.git.icon.status.mixed": "*",
  "explorer.git.icon.status.added": "+",
  "explorer.git.icon.status.deleted": "-",
  "explorer.git.icon.status.modified": "~",
  "explorer.keyMappings.global": {
    "<cr>": ["expandable?", "expand", "open"],
    "v": "open:vsplit"
  }
}
